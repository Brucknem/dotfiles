#!/usr/bin/bash

for CONFIG_DIR in alacritty nvim picom ranger mimeapps.list
do
    ln -s $PWD/$CONFIG_DIR $HOME/.config
done

ln -s $PWD/.xmonad $HOME/
ln -s $PWD/nvim/lua/custom $HOME/.config/nvim/lua/

# Install relevant
sudo systemctl start NetworkManager
sudo systemctl enable NetworkManager
sudo pacman -Syyu

sudo pacman -Syu xorg-server xorg-apps plasma-meta
sudo systemctl enable sddm

sudo pacman -Syu alacritty
sudo pacman -S --needed git base-devel
cd /tmp
git clone https://aur.archlinux.org/yay.git
cd yay/
makepkg -si
yay
yay -Y --gendb
yay -Syu --devel
yay -Y --devel --save

yay 1password
sudo pacman -S chromium
sudo pacman -Syu neofetch
sudo pacman -S htop

mkdir $HOME/Repositories
cd Repositories/
sudo pacman -Syu zsh
sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"

# From ZSH
